<!-- Compare you VM's XML and see how you compare to this set-up -->
<!-- Remove the comments when you use it to your VM so it will look cleaner -->

<features>
    <acpi/>
    <apic/>
    <hyperv mode='custom'>
      <relaxed state='on'/>
      <vapic state='on'/>
      <spinlocks state='on' retries='8191'/>
      <vpindex state='on'/>
      <synic state='on'/>
      <stimer state='on'/>
      <reset state='on'/>

<!-- A custom vendor ID like 1234567890ab makes the VMâ€™s CPU easier to identify for compatibility or testing -->
      <vendor_id state='on' value='1234567890ab'/>

      <frequencies state='on'/>
    </hyperv>

    <kvm>
<!-- tells the VM to hide its virtualization status from the guest, helping prevent detection that it's running in a virtual environment -->
      <hidden state='on'/>
    </kvm>

    <vmport state='off'/>
    <ioapic driver='kvm'/>
  </features>
  <cpu mode='host-passthrough' check='none' migratable='off'>
    <topology sockets='1' dies='1' cores='8' threads='2'/>
    <cache mode='passthrough'/>
  </cpu>
  <clock offset='localtime'>
    <timer name='hypervclock' present='yes'/>
    <timer name='hpet' present='no'/>

<!-- tsc timer VM enables faster and more accurate timing by using the host's hardware clock -->
    <timer name='tsc' present='yes' mode='native'/>

  </clock>
